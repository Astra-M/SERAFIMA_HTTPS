          ul.product-header__nav-list
            li.product-header__nav-item.product-header__nav-item_icon
              a.product-header__nav-link(href='../index.html', target="_blank")
                svg.product-header__nav-item.product-header__nav-item_icon(xmlns="http://www.w3.org/2000/svg",
                  viewBox="0 0 40 40")
                  use(href="../images/svg/icons.svg#home")
            li.product-header__nav-item
              a.product-header__nav-link(href='#', target="_blank") Обо мне
            li.product-header__nav-item
              a.product-header__nav-link(href='#', target="_blank") В каталог
            li.product-header__nav-item.product-header__nav-item_icon
              a.product-header__nav-link(href='../index.html', target="_blank")
                svg.product-header__nav-item.product-header__nav-item_icon(xmlns="http://www.w3.org/2000/svg",
                  viewBox="0 0 40 40")
                  use(href="../images/svg/icons.svg#cart")
          div.product-header__burger
            span.product-header__burger-line.one
            span.product-header__burger-line.two
            span.product-header__burger-line.three

